{
  "name": "<name>",
  "description": "<description>",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "/icon-32x32.png",
    "64": "/icon-64x64.png",
    "128": "/icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "bg.js"
  },
  "permissions": ["activeTab", "storage"]
}
